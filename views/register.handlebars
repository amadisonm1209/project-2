<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    <h3>Create an account to get the full High Spirits experience!</h3>
                </span>

                <div class="row">
                    <div class="col s12">
                        {{!-- Error messages if a field is missing, passwords don't match, or the email is already in use --}}
                        {{> messages}}
                    </div>
                    <form class="container" action="/users/register" method="POST">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="name" type="text" name="name" class="validate">
                                <label for="name"> Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" name="email" class="validate">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="password" name="password" class="validate">
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password2" type="password" name="password2" class="validate">
                                <label for="password2">Confirm</label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" id="register-submit" type="submit">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </form>
                    <p class="lead mt-4">Already have an account? <a href="/users/login">Login</a></p>

                </div>

            </div>
        </div>
    </div>
</div>